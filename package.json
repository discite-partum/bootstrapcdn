{
  "name": "bootstrapcdn",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "clean": "rm -rf ./node_modules/",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "puglint": "pug-lint views/",
    "pug-lint": "npm run puglint",
    "xo": "xo --quiet",
    "lint": "npm run xo && npm run puglint",
    "mocha": "mocha",
    "mocha:only-functional": "npm run mocha -- --reporter progress ./test/functional_test.js",
    "mocha:only-functional:dev": "cross-env BCDN_HEADERS=debug npm run mocha:only-functional",
    "mocha:only-functional:prod": "cross-env BCDN_HEADERS=production npm run mocha:only-functional",
    "mocha:no-functional": "npm run mocha -- --invert --grep \"functional\"",
    "dev": "nodemon --ext css,js,pug,svg,png,yml --ignore test --ignore cdn --exec \"npm run server\"",
    "watch": "npm run dev",
    "server": "node bin/www.js",
    "start": "cross-env NODE_ENV=production npm run server",
    "ci": "npm run lint && npm run mocha:no-functional && npm run mocha:only-functional:dev && npm run mocha:only-functional:prod",
    "ci-with-coverage": "npm run lint && nyc npm run mocha:no-functional && npm run mocha:only-functional:dev && npm run mocha:only-functional:prod",
    "test": "npm run lint && npm run mocha:no-functional",
    "test-with-coverage": "npm run lint && nyc npm run mocha:no-functional",
    "purge-latest": "bash ./scripts/purge.sh",
    "bootlint": "node ./scripts/update_bootlint.js",
    "bootstrap": "node ./scripts/update_bootstrap.js",
    "bootswatch": "node ./scripts/update_bootswatch.js",
    "integrity": "node ./scripts/integrity.js",
    "sri": "node ./scripts/sri.js",
    "wp-plugin": "node ./scripts/wp-plugin.js"
  },
  "engines": {
    "node": "10.x"
  },
  "dependencies": {
    "compression": "^1.7.2",
    "cross-env": "^5.2.0",
    "errorhandler": "^1.5.0",
    "express": "^4.16.3",
    "express-sitemap": "^1.8.0",
    "express-sslify": "^1.2.0",
    "helmet": "^3.12.1",
    "js-yaml": "^3.12.0",
    "jstransformer-clean-css": "^2.1.0",
    "morgan": "^1.9.0",
    "pug": "^2.0.3",
    "rollbar": "^2.4.1",
    "semver": "^5.5.0",
    "serve-favicon": "^2.5.0",
    "sri-toolbox": "^0.2.0",
    "staticify": "^3.0.0",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "bootlint": "0.14.2",
    "bootstrap": "4.1.1",
    "bootswatch": "4.1.1",
    "coveralls": "^3.0.1",
    "fs-extra": "^6.0.1",
    "fs-walk": "^0.0.2",
    "html-validator": "^3.0.5",
    "htmlencode": "^0.0.4",
    "mocha": "^5.2.0",
    "mockdate": "^2.0.2",
    "nodemon": "^1.17.5",
    "nyc": "^12.0.2",
    "pug-lint": "^2.5.0",
    "pug-lint-config-clock": "^2.0.0",
    "request": "^2.87.0",
    "uglify-js": "^3.4.2",
    "xo": "^0.21.1"
  },
  "xo": {
    "esnext": true,
    "rules": {
      "arrow-parens": [
        "error",
        "always"
      ],
      "capitalized-comments": "off",
      "global-require": "error",
      "import/no-unassigned-import": [
        "error",
        {
          "allow": [
            "app.js"
          ]
        }
      ],
      "indent": [
        "error",
        4,
        {
          "MemberExpression": "off",
          "SwitchCase": 1
        }
      ],
      "init-declarations": [
        "error",
        "always"
      ],
      "new-cap": "off",
      "no-multi-spaces": [
        "error",
        {
          "ignoreEOLComments": true,
          "exceptions": {
            "Property": true,
            "VariableDeclarator": true
          }
        }
      ],
      "no-undefined": "error",
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "prefer-reflect": "off",
      "prefer-destructuring": "off",
      "quote-props": [
        "error",
        "consistent"
      ],
      "space-before-function-paren": [
        "error",
        "never"
      ],
      "unicorn/filename-case": "off",
      "unicorn/no-process-exit": "off"
    },
    "overrides": [
      {
        "files": "public/assets/js/*.js",
        "esnext": false,
        "strict": true,
        "envs": [
          "browser"
        ],
        "rules": {
          "unicorn/no-abusive-eslint-disable": "off"
        }
      },
      {
        "files": "test/*.js",
        "envs": [
          "mocha"
        ]
      }
    ]
  },
  "nyc": {
    "include": [
      "**/*.js"
    ],
    "reporter": [
      "html",
      "text-summary"
    ]
  }
}
